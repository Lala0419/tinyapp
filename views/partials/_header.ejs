<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-success">
		<a class="navbar-brand" href="/urls">TinyApp</a>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav" style="align-items: center">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
				<% if(user){ %>
				<span>Logged in as: <%= user.email %> !</span>
				<form
					action="/logout"
					method="POST"
					style="
						margin-left: 32px;
						border: 0.0625rem solid #007bff;
						border-radius: 4px;
					"
				>
					<button type="submit" class="btn">Logout</button>
				</form>
				<% }else{ %>
				<a
					href="/login"
					style="
						margin-left: 32px;
						border: 0.0625rem solid #007bff;
						border-radius: 4px;
						padding: 0.5rem 1rem;
					"
					>Login</a
				>
				<a
					href="/register"
					style="
						margin-left: 32px;
						border: 0.0625rem solid #007bff;
						border-radius: 4px;
						padding: 0.5rem 1rem;
					"
					>Register</a
				>

				<% } %>
			</div>
		</div>
	</nav>
</header>

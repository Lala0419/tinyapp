	<%- include('partials/_head') %>
	<title>TinyApp | Edit URL</title>
	</head>
	<body>
		<%- include('partials/_header') %>
		<div class="card text-center">
			<div class="card-header"></div>
			<div class="card-body">
				<h5 class="card-title">TinyURL for: <%= longURL %></h5>
				<p class="card-text">
					Short URL ID: <a href="/u/<%= id %>"><%= id %></a>
				</p>
			</div>
			<div class="card-footer text-muted">
				<h2 style="font-size: 2rem; font-weight: 500">Edit</h2>
				<form class="form-inline" action="/urls/<%= id %>" method="POST">
					<div class="form-group mb-2">
						<label for="longURL">UPDATE URL:</label>
						<input
							class="form-control"
							type="text"
							name="longURL"
							placeholder="http://"
							style="width: 300px; margin: 1em"
						/>
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
			</div>
		</div>
		<%- include('partials/_script') %>
	</body>
</html>
